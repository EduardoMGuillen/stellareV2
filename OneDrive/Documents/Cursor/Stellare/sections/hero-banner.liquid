{% style %}
  .hero-section {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    {% if section.settings.hero_image %}
      background-image: url('{{ section.settings.hero_image | img_url: '2000x' }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% else %}
      background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
    {% endif %}
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    {% if section.settings.hero_image %}
      background: rgba(0, 0, 0, 0.4);
    {% else %}
      background: linear-gradient(135deg, rgba(233, 30, 140, 0.05) 0%, rgba(255, 215, 0, 0.05) 100%);
    {% endif %}
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
    padding: 4rem 2rem;
    z-index: 2;
    position: relative;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 300;
    margin-bottom: 1.5rem;
    letter-spacing: -1px;
    {% if section.settings.hero_image %}
      color: white;
      text-shadow: 0 2px 20px rgba(0,0,0,0.3);
    {% else %}
      color: #E91E8C;
    {% endif %}
    animation: fadeInUp 0.8s ease;
  }

  .hero-subtitle {
    font-size: 1.3rem;
    font-weight: 300;
    margin-bottom: 2.5rem;
    line-height: 1.6;
    {% if section.settings.hero_image %}
      color: rgba(255, 255, 255, 0.95);
      text-shadow: 0 2px 10px rgba(0,0,0,0.2);
    {% else %}
      color: #666;
    {% endif %}
    animation: fadeInUp 1s ease;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .cta-button {
    display: inline-block;
    background: #E91E8C;
    color: white;
    padding: 1.2rem 3.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(233, 30, 140, 0.3);
    animation: fadeInUp 1.2s ease;
    text-transform: uppercase;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(233, 30, 140, 0.4);
    background: #FF1493;
  }

  @media (max-width: 768px) {
    .hero-section {
      min-height: 500px;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.1rem;
    }

    .cta-button {
      padding: 1rem 2.5rem;
      font-size: 1rem;
    }
  }
{% endstyle %}

<section class="hero-section">
  <div class="hero-overlay"></div>
  
  <div class="hero-content">
    <h1 class="hero-title">{{ section.settings.title }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    <a href="https://stellare.co/pages/builder" class="cta-button">{{ section.settings.button_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Imagen de Fondo",
      "info": "Recomendado: 2000x800px. Deja vacío para fondo con degradado."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Crea la Pulsera de Tus Sueños"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Diseña tu pulsera italiana única con nuestro constructor interactivo"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del Botón",
      "default": "Comienza Ahora"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

