{% comment %}
  Elegant Story Section - Christmas Theme
  A beautiful section with image and text for storytelling
{% endcomment %}

<style>
.elegant-story {
  padding: 6rem 0;
  background: linear-gradient(135deg, #F5F1E8 0%, #FDFDF8 50%, #FAF6E8 100%);
  position: relative;
  overflow: hidden;
}

.elegant-story::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, #D4AF37 50%, transparent 100%);
}

.elegant-story::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent 0%, #D4AF37 50%, transparent 100%);
}

.story-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
}

.story-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 5rem;
  align-items: center;
}

.story-image-wrapper {
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 
    0 20px 60px rgba(27, 67, 50, 0.15),
    0 0 40px rgba(212, 175, 55, 0.1);
}

.story-image-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 3px solid #D4AF37;
  border-radius: 20px;
  opacity: 0;
  transition: opacity 0.5s ease;
  z-index: 2;
}

.story-image-wrapper:hover::before {
  opacity: 1;
}

.story-image {
  width: 100%;
  height: 600px;
  object-fit: cover;
  display: block;
  transition: transform 0.7s ease;
}

.story-image-wrapper:hover .story-image {
  transform: scale(1.05);
}

.story-image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(to top, rgba(27, 67, 50, 0.8) 0%, transparent 100%);
  z-index: 1;
}

.story-content {
  padding: 2rem 0;
}

.story-label {
  display: inline-block;
  padding: 0.5rem 1.5rem;
  background: linear-gradient(135deg, #1B4332 0%, #2D6A4F 100%);
  color: #D4AF37;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2px;
  border-radius: 50px;
  margin-bottom: 1.5rem;
  border: 1px solid #D4AF37;
}

.story-title {
  font-size: 3.5rem;
  font-weight: 300;
  color: #1B4332;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  letter-spacing: -1px;
  text-shadow: 2px 2px 4px rgba(212, 175, 55, 0.1);
}

.story-title .highlight {
  color: #D4AF37;
  font-weight: 400;
  font-style: italic;
}

.story-text {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #5a5a5a;
  margin-bottom: 1.5rem;
  font-weight: 300;
}

.story-text strong {
  color: #1B4332;
  font-weight: 500;
}

.story-quote {
  border-left: 4px solid #D4AF37;
  padding-left: 2rem;
  margin: 2rem 0;
  font-style: italic;
  font-size: 1.2rem;
  color: #8B5E34;
  font-weight: 300;
}

.story-features {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  margin-top: 2.5rem;
}

.story-feature {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.feature-icon {
  flex-shrink: 0;
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, #1B4332 0%, #2D6A4F 100%);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.5rem;
  color: #D4AF37;
  box-shadow: 0 4px 15px rgba(27, 67, 50, 0.2);
  border: 1px solid #D4AF37;
}

.feature-content h4 {
  font-size: 1.1rem;
  color: #1B4332;
  margin-bottom: 0.5rem;
  font-weight: 500;
}

.feature-content p {
  font-size: 0.95rem;
  color: #5a5a5a;
  line-height: 1.5;
  font-weight: 300;
}

.story-cta {
  margin-top: 3rem;
}

.story-btn {
  display: inline-block;
  padding: 1rem 3rem;
  background: linear-gradient(135deg, #1B4332 0%, #2D6A4F 100%);
  color: #D4AF37;
  border: 2px solid #D4AF37;
  border-radius: 50px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-size: 0.95rem;
  transition: all 0.4s ease;
  box-shadow: 0 4px 20px rgba(27, 67, 50, 0.2);
}

.story-btn:hover {
  background: linear-gradient(135deg, #2D6A4F 0%, #1B4332 100%);
  transform: translateY(-3px);
  box-shadow: 0 8px 30px rgba(212, 175, 55, 0.4);
  color: white;
}

/* Decorative elements */
.story-decoration {
  position: absolute;
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.1) 0%, transparent 70%);
  pointer-events: none;
}

.story-decoration.top-right {
  top: 10%;
  right: 5%;
}

.story-decoration.bottom-left {
  bottom: 15%;
  left: 5%;
}

/* Mobile Responsive */
@media (max-width: 1024px) {
  .story-grid {
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .story-title {
    font-size: 2.5rem;
  }

  .story-image {
    height: 450px;
  }

  .story-features {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .elegant-story {
    padding: 4rem 0;
  }

  .story-container {
    padding: 0 1rem;
  }

  .story-title {
    font-size: 2rem;
  }

  .story-text {
    font-size: 1rem;
  }

  .story-quote {
    font-size: 1rem;
    padding-left: 1rem;
  }

  .story-image {
    height: 350px;
  }

  .story-cta {
    text-align: center;
  }
}
</style>

